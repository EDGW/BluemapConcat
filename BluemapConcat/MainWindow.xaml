<Window x:Class="BluemapConcat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BluemapConcat" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Bluemap Concat" Height="587" Width="912" WindowState="Maximized">
    <Window.Resources>
        <materialDesign:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <materialDesign:MathConverter x:Key="MathConverter"/>
        <Style TargetType="{x:Type materialDesign:Card}">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF8A8A8A" Direction="308" ShadowDepth="3" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Image Source="{Binding Composite}"/>
        <materialDesign:Card Padding="5" Width="750" HorizontalAlignment="Left" Opacity="0.74" VerticalAlignment="Top">
            <StackPanel>
                <Label Margin="5" FontWeight="Bold" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}">Arguments</Label>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Margin="0,5,5,5" VerticalAlignment="Center">Bluemap URL</Label>
                    <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center" Text="{Binding MapAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,4,5,4"/>
                    <Label Grid.Row="1" Grid.Column="0" Margin="0,5,5,5" VerticalAlignment="Center">Tilefile Path Format</Label>
                    <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center" Text="{Binding TilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,4,5,4"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="0,5,5,5" VerticalAlignment="Center">
                        <Label VerticalAlignment="Center">X Range</Label>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding XFromPosCommand}" Padding="4,4,4,4" FontSize="12">From Pos</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center">
                        <materialDesign:NumericUpDown Minimum="-128" Maximum="127" Value="{Binding StartX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,4,5,4"/>
                        <TextBlock VerticalAlignment="Center" Margin="5,0,5,0">to</TextBlock>
                        <materialDesign:NumericUpDown Minimum="-128" Maximum="127" Value="{Binding EndX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,4,5,4"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" Margin="0,5,5,5" VerticalAlignment="Center">
                        <Label VerticalAlignment="Center">Z Range</Label>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding ZFromPosCommand}" Padding="4,4,4,4" FontSize="12">From Pos</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center">
                        <materialDesign:NumericUpDown Minimum="-128" Maximum="127" Value="{Binding StartZ, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,4,5,4"/>
                        <TextBlock VerticalAlignment="Center" Margin="5,0,5,0">to</TextBlock>
                        <materialDesign:NumericUpDown Minimum="-128" Maximum="127" Value="{Binding EndZ, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,4,5,4"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5,5,5" Grid.Row="3" Grid.Column="0" >
                        <Label Margin="0,0,5,0" VerticalAlignment="Center">Contour</Label>
                        <CheckBox Margin="3,0,3,0" Content="" IsChecked="{Binding Contour, Mode=TwoWay}"/>
                    </StackPanel>

                    <Label Grid.Row="4" Grid.Column="0" Margin="0,5,5,5" VerticalAlignment="Center">Contour Interval</Label>
                    <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center">
                        <materialDesign:NumericUpDown IsEnabled="{Binding Contour}" Minimum="4" Maximum="512" Value="{Binding Interval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,4,5,4"/>
                    </StackPanel>
                    <Label Grid.Row="4" Grid.Column="2" Margin="0,5,5,5" VerticalAlignment="Center">HMap Detect Radius</Label>


                    <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="3" VerticalAlignment="Center">
                        <materialDesign:NumericUpDown IsEnabled="{Binding Contour}" Minimum="0" Maximum="32" Value="{Binding Radius, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,4,5,4"/>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Margin="0,5,5,5" Grid.Row="5" Grid.Column="0" >
                        <Label Margin="0,0,5,0" VerticalAlignment="Center">Bestfit Range</Label>
                        <CheckBox Margin="3,0,3,0" Content="" IsChecked="{Binding BestFit, Mode=TwoWay}"/>
                    </StackPanel>

                    <Label  Visibility="{Binding BestFit,Converter={StaticResource BooleanToVisibilityConverter}}" Grid.Row="6" Grid.Column="0" Margin="0,5,5,5" VerticalAlignment="Center">Fit Range</Label>
                    <StackPanel Visibility="{Binding BestFit,Converter={StaticResource BooleanToVisibilityConverter}}" Orientation="Horizontal" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center">
                        <materialDesign:NumericUpDown Minimum="0" Maximum="255" Value="{Binding FitL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,4,5,4"/>
                        <TextBlock VerticalAlignment="Center" Margin="5,0,5,0">to</TextBlock>
                        <materialDesign:NumericUpDown Minimum="0" Maximum="255" Value="{Binding FitH, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,4,5,4"/>
                    </StackPanel>
                    <Grid  Visibility="{Binding BestFit,Converter={StaticResource BooleanToVisibilityConverter}}" Grid.Row="7" Grid.ColumnSpan="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,5,5,5" Grid.Column="0" Grid.Row="0" >
                            <Label Margin="0,0,5,0" VerticalAlignment="Center">Lower</Label>
                            <CheckBox IsEnabled="{Binding BestFit}" Margin="3,0,3,0" Content="" IsChecked="{Binding Lower, Mode=TwoWay}"/>
                        </StackPanel>
                        <Grid IsEnabled="{Binding BestFit}"  Grid.Column="1" Grid.Row="0">
                            <materialDesign:ColorPicker x:Name="lowerP" Height="{Binding ActualWidth, ElementName=lowerP}" MaxWidth="250" MaxHeight="250" IsEnabled="{Binding Lower}" Color="{Binding LowerC}"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,5,5,5" Grid.Column="2" Grid.Row="0" >
                            <Label Margin="0,0,5,0" VerticalAlignment="Center">Fit</Label>
                            <CheckBox IsEnabled="{Binding BestFit}" Margin="3,0,3,0" Content="" IsChecked="{Binding Fit, Mode=TwoWay}"/>
                        </StackPanel>
                        <Grid IsEnabled="{Binding BestFit}" Grid.Column="3" Grid.Row="0">
                            <materialDesign:ColorPicker  MaxWidth="250" MaxHeight="250" IsEnabled="{Binding Fit}" Color="{Binding FitC}"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,5,5,5" Grid.Column="4">
                            <Label Margin="0,0,5,0" VerticalAlignment="Center">Higher</Label>
                            <CheckBox IsEnabled="{Binding BestFit}" Margin="3,0,3,0" Content="" IsChecked="{Binding Upper, Mode=TwoWay}"/>
                        </StackPanel>
                        <Grid IsEnabled="{Binding BestFit}" Grid.Column="5">
                            <materialDesign:ColorPicker MaxWidth="250" MaxHeight="250" IsEnabled="{Binding Upper}" Color="{Binding UpperC}"/>
                        </Grid>
                    </Grid>

                    <StackPanel Visibility="{Binding BestFit,Converter={StaticResource BooleanToVisibilityConverter}}" Orientation="Horizontal" Margin="0,5,5,5" Grid.Column="0" Grid.Row="8" >
                        <Label Margin="0,0,5,0" VerticalAlignment="Center">Opacity</Label>
                    </StackPanel>
                    <Grid Visibility="{Binding BestFit,Converter={StaticResource BooleanToVisibilityConverter}}" Grid.Column="1" Grid.Row="8" >
                        <materialDesign:NumericUpDown VerticalAlignment="Center" Minimum="0" Maximum="255" Value="{Binding Opacity}"/>
                    </Grid>
                </Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button
Style="{StaticResource MaterialDesignRaisedButton}" 
HorizontalAlignment="Right" Margin="5" Content="Save Map" Command="{Binding SaveMapCommand}"/>
                    <Button
materialDesign:ButtonProgressAssist.IsIndicatorVisible="{Binding Running}"
materialDesign:ButtonProgressAssist.Value="{Binding Current}" 
materialDesign:ButtonProgressAssist.Maximum="{Binding Total}" 
Style="{StaticResource MaterialDesignRaisedButton}" 
HorizontalAlignment="Right" Margin="5" Content="Generate Map" Command="{Binding CreateMapCommand}"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
